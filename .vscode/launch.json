    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js"
        },
        {
            "name": "Run tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/tape/bin/tape",
            "stopOnEntry": false,
            "args": ["tests/tests.js", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": { "NODE_ENV": "testing"}
        }
    ]
}